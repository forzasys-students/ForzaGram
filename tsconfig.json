{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "moduleResolution": "node",             
    "module": "esnext",                     
    "strict": true,
    "jsx": "react-native",
    "allowJs": true,
    "noEmit": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx"                              
  ]
}
